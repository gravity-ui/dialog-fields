  "compilerOptions": {
    "outDir": "build",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build", "storybook-static", "src/stories"]
}
